{
    "env": {
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 144,
                "ignoreComments": true
            }
        ],
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-bitwise": "off"
    }
}